<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nearbyPerson"
    android:layout_marginTop="0dip"
    android:layout_marginLeft="0dip"
    android:layout_marginRight="0dip"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <!--android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/card_margin_horizontal"
        android:layout_marginRight="@dimen/card_margin_horizontal"
        card_view:cardCornerRadius="0dp"-->

        <RelativeLayout
            android:id="@+id/rl_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dip"
            android:layout_marginBottom="0dip"
            >


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/frame"
                android:layout_marginTop="10dip"
                android:layout_marginBottom="10dip"
                >


                <RelativeLayout
                    android:id="@+id/rl_image_prof"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/profileImage"
                        tools:src="@drawable/test_small"
                        android:layout_centerVertical="true"
                        android:layout_width="55dip"
                        android:layout_height="55dip"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/app_name" />

                    <ImageView
                        android:id="@+id/iv_status"
                        android:layout_width="@dimen/circle_status"
                        android:layout_height="@dimen/circle_status"
                        android:layout_alignBottom="@+id/profileImage"
                        android:layout_alignRight="@+id/profileImage"
                        android:layout_marginBottom="0dp"
                        android:layout_marginRight="3dip"
                        android:layout_marginTop="0dip"
                        android:contentDescription="TODO"
                        android:paddingBottom="1dip"
                        tools:src="@drawable/circle_d1_cyan" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_name"
                    android:layout_toRightOf="@+id/rl_image_prof"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dip"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="true"
                        android:gravity="center_vertical"
                        android:textColor="@color/colorBlack"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        tools:text="Mathew," />

                    <TextView
                        android:id="@+id/tv_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:includeFontPadding="true"
                        android:layout_toRightOf="@+id/tv_name"
                        android:textColor="@color/colorBlack"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        tools:text="21" />

                    <TextView
                        android:id="@+id/tv_status_connection"
                        android:layout_below="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dip"
                        android:layout_marginTop="1dip"
                        android:includeFontPadding="false"
                        android:text=""
                        android:textColor="@color/colorGray3"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        tools:text="From Hamburg, Germany" />


                    <TextView
                        android:id="@+id/tv_status_new_message"
                        android:layout_toRightOf="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|right"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="0dip"
                        android:layout_marginTop="1dip"
                        android:layout_marginRight="5dip"
                        android:includeFontPadding="false"
                        android:textColor="@color/colorGray"
                        android:textSize="13sp"
                        android:textStyle="normal"
                        tools:text="@string/label_new_message" />

                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
  <!--/android.support.v7.widget.CardView-->
</RelativeLayout>