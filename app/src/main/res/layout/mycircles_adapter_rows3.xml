    <RelativeLayout android:visibility="visible"
        android:id="@+id/rl_mes"
        android:layout_marginTop="0dip"
        android:layout_marginLeft="0dip"
        android:layout_marginRight="0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_alignParentRight="true"
        android:gravity="right|top"
        android:orientation="horizontal"
        >
            <TextView
                android:id="@+id/tv_message"
                android:layout_toEndOf="@+id/tv_title_1"
                android:visibility="gone"
                tools:visibility="visible"
                android:layout_marginTop="1dip"
                android:layout_marginBottom="0dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/rl_message"
                android:gravity="right"
                android:textStyle="bold"
                android:textColor="@color/colorGray"
                android:textSize="13sp"
                android:text="@string/label_new_message"
                tools:text="@string/label_new_message"
                android:layout_marginEnd="60dip"
                />

            <RelativeLayout
                android:id="@+id/rl_message"
                android:layout_marginTop="0dip"
                android:layout_marginLeft="0dip"
                android:layout_marginRight="0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="right|top"
                >

                <ImageView
                    android:id="@+id/iv_chat_message"
                    android:visibility="gone"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_alignParentEnd="true"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:src="@drawable/sendchat"
                    android:layout_marginEnd="5dp"
                    android:contentDescription="@string/app_name" />


                <ImageView
