<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <!-- SHADOW LAYER -->

            <!-- SHADOW LAYER -->
            <item>
                <shape>
                    <padding android:left="1dp" android:right="1dp" android:top="1dp" android:bottom="0dp"></padding>
                    <solid android:color="@color/colorGray" />
                    <corners android:radius="0dp" />
                </shape>
            </item>
            <!-- CONTENT LAYER -->
            <item android:bottom="3dp" android:left="1dp" android:right="1dp" android:top="1dp">
                <shape>
                    <solid android:color="#ffffff" />
                    <corners android:radius="1dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>